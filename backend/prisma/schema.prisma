// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model Person {
  id         String    @id @default(cuid())
  name       String
  active     Boolean   @default(true)
  monthlyFee Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  payments   Payment[]

  @@index([active])
  @@unique([name])
}

model MonthlyFee {
  id        String   @id @default(cuid())
  period    String   @unique
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id        String   @id @default(cuid())
  period    String
  amount    Int
  paidAt    DateTime @default(now())
  note      String?

  personId  String
  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@index([period])
  @@index([personId])
  @@unique([personId, period])
}

model Expense {
  id          String   @id @default(cuid())
  period      String
  amount      Int
  description String
  spentAt     DateTime @default(now())

  @@index([period])
}
